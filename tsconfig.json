{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "ESNext",  
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "sourceMap": true,
    "outDir": "out",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
	  "strictNullChecks": true,
    "baseUrl": ".",
    "inlineSources": true,
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
  },
  "include": [
     "src/**/*.ts"
  ],
  "exclude": [
     "out",
     "node_modules"
  ]
}
